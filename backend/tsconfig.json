{
  "compilerOptions": {
    // --- Core Settings for a Modern Node.js Project ---
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // --- Project Structure ---
    "rootDir": "./src",
    "outDir": "./dist",

    // --- Strictness & Best Practices ---
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Tells TypeScript to only compile files inside the 'src' folder
  "exclude": ["node_modules"]
}